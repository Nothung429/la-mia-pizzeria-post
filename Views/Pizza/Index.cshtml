@{
    Layout = "_Layout";

    //@model Pizza
}

<div class="container">
    <h1 class="text-center display-4">Welcome to Pizzeria Totò Sapore</h1>
    <table class="table table-dark table-striped table-hover mt-4">
        <thead>
            <tr>
                <th scope="col" width="20%">Nome</th>
                <th scope="col" width="20%">Descrizione</th>
                <th scope="col" width="20%">Immagine</th>
                <th scope="col" width="20%">Prezzo</th>
                <th scope="col" width="20%">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <td>
                        <h3>@pizza.Name</h3>
                    </td>
                    <td>
                        <p>@pizza.Description</p>
                    </td>
                    <td>
                        <img width="100" src="@pizza.Image">
                    </td>
                    <td>
                        <h4>@pizza.Price€</h4>
                    </td>
                    <td>
                        <a href="@Url.Action("Show", "Pizza", new {Id = pizza.Id})" class="btn btn-outline-info">
                            Visualizza
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
